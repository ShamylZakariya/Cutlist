    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Cutlist",
            "cargo": {
                "args": [
                    "build",
                    "--bin=cutlist",
                    "--package=cutlist"
                ],
                "filter": {
                    "name": "cutlist",
                    "kind": "bin"
                }
            },
            "args": [
                "--attempts",
                "0"
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Cutlist (16 count)",
            "cargo": {
                "args": [
                    "build",
                    "--bin=cutlist",
                    "--package=cutlist"
                ],
                "filter": {
                    "name": "cutlist",
                    "kind": "bin"
                }
            },
            "args": [
                "--count",
                "16"
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'cutlist'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=cutlist",
                    "--package=cutlist"
                ],
                "filter": {
                    "name": "cutlist",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}